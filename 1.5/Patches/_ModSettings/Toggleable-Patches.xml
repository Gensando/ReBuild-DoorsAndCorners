	<!-- ================ New wall atlas texture ================ -->
	<Operation Class="ModSettingsFramework.PatchOperationModOption">
		<defaultValue>True</defaultValue>
		<label>Enable new wall textures</label>
		<tooltip>Enable new textures for wall atlas. If disables, you will still get HD textures, they are just closer to vanilla. (Default: True)</tooltip>
		<id>RB_NewWallAtlasTextures</id>
		<category>RB_Core</category>
		<order>10</order>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[@Name="Wall"]/graphicData/texPath</xpath>
				<value>
					<texPath>Things/Building/Linked/RB_Wall</texPath>
				</value>
			</li>
		</operations>
	</Operation>
