<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ================ New wall atlas texture ================ -->
	<Operation Class="ModSettingsFramework.PatchOperationModOption">
		<defaultValue>True</defaultValue>
		<label>Enable alternative wall textures</label>
		<tooltip>Enable new alternative textures for vanilla walls. If disables, you will still get HD textures, they just stay true to the vanilla style. (Default: True)</tooltip>
		<id>RB_NewWallAtlasTextures</id>
		<category>RB_Core</category>
		<order>0</order>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[@Name="Wall"]/graphicData/texPath</xpath>
				<value>
					<texPath>Things/Building/Linked/RB_AlternativeWall</texPath>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[@Name="Wall"]/uiIconPath</xpath>
				<value>
					<uiIconPath>Things/Building/Linked/RB_AlternativeWall/WallSmooth_MenuIcon</uiIconPath>
				</value>
			</li>
		</operations>
	</Operation>
	<!-- ================ Perspective Doors ================ -->
	<Operation Class="ModSettingsFramework.PatchOperationModOption">
		<defaultValue>True</defaultValue>
		<label>Enable perspective doors</label>
		<tooltip>Enable perspective doors. Adds a slight depth to door textures and a different east/west view.(Default: True)</tooltip>
		<id>RB_PerspectiveDoors</id>
		<category>RB_Core</category>
		<order>1</order>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Door" or defName="Autodoor" or defName="AnimalFlap" or defName="RB_DoubleDoor" or defName="RB_TripleDoor" or defName="RB_DoubleAutodoor" or defName="RB_TripleAutodoor"]/graphicData/graphicClass</xpath>
				<value>
					<graphicClass>Graphic_Multi</graphicClass>
				</value>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology" Class="PatchOperationReplace">
				<xpath>Defs/ThingStyleDef[defName="Techist_Autodoor"]/graphicData/graphicClass</xpath>
