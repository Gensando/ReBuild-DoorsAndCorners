<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<!-- ================================ Changes Security Door ====================== -->
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SecurityDoor"]/building/doorTopGraphic/drawSize</xpath>
				<value>
					<drawSize>(3,2)</drawSize>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SecurityDoor"]/building/doorSupportGraphic/drawSize</xpath>
				<value>
					<drawSize>(3,2)</drawSize>
				</value>
			</li>
			<!-- ================================ Changes Bioferrite Plate ====================== -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/TerrainDef[defName="BioferritePlate"]</xpath>
				<value>
					<designationCategory>Anomaly</designationCategory>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/TerrainDef[defName="BioferritePlate"]</xpath>
				<value>
					<uiOrder>5</uiOrder>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>